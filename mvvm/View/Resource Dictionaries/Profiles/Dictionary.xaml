<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Top Options -->
    <Style TargetType="StackPanel" x:Key="TopOption_StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="60,5,5,5"/>
    </Style>

    <Style TargetType="Button" x:Key="TopOption_Button">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Margin" Value="10,10,10,10"/>
    </Style>
    
    <!-- Profiles -->
    <Style TargetType="ListView" x:Key="ProfileList">
        <Setter Property="Height" Value="auto"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="MaxHeight" Value="{Binding ActualHeight, ElementName=stackPanel, Mode=OneWay}"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
    </Style>

</ResourceDictionary>